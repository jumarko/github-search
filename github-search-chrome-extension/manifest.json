{
    "name": "Github repositories code search",
    "version": "0.2",
    "homepage_url": "https://github.com/jumarko/github-search",
    "manifest_version": 2,
    "description": "Extension allows full text search across all GitHub organization's repositories.",
    "options_page": "options.html",
    "browser_action": {
        "default_title": "Github search",
        "default_icon": "icon.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://github.com/*"],
            "css": ["search_on_page.css"],
            "js": ["jquery-1.8.3.min.js", "jquery.blockUI.js", "search_on_page.js"]
        }
    ],
    "permissions": [
        "http://www.google.com/",
        "https://www.google.com/",
        "http://www.google.sk/",
        "https://www.google.sk/",
        "https://github.com/"
    ]
}
